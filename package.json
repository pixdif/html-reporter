{
  "name": "@pixdif/html-reporter",
  "version": "0.3.0",
  "description": "PixDif HTML Reporter",
  "main": "dist",
  "scripts": {
    "start": "webpack serve --mode=development",
    "build": "npm run build-gui && npm run build-cli",
    "build-gui": "webpack",
    "debug-gui": "webpack --mode=development",
    "build-cli": "tsc -p tsconfig.cli.json",
    "debug-cli": "tsc -p tsconfig.cli.json --incremental --sourceMap",
    "test": "npm run lint && playwright test",
    "lint": "eslint --ext=ts,tsx,js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixdif/html-reporter.git"
  },
  "keywords": [
    "html",
    "reporter",
    "test",
    "image",
    "compare"
  ],
  "author": "Kazuichi Takashiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pixdif/html-reporter/issues"
  },
  "homepage": "https://github.com/pixdif/html-reporter#readme",
  "dependencies": {
    "@pixdif/model": "^0.6.0",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.1",
    "mini-css-extract-plugin": "^2.7.5",
    "rimraf": "^5.0.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  },
  "files": [
    "dist"
  ]
}
